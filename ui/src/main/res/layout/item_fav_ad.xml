<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_favAd_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="Cours de sciences niveau Collège/Lycée"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_favAd_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_favAd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:text="Mathieu,"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_item_favAd_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_favAd_title" />

    <TextView
        android:id="@+id/tv_item_favAd_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marseille"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_favAd_name"
        app:layout_constraintStart_toEndOf="@+id/tv_item_favAd_name"
        app:layout_constraintTop_toTopOf="@+id/tv_item_favAd_name" />

    <TextView
        android:id="@+id/tv_item_favAd_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="30€"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_favAd_title"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_favAd_rightArrow"
        app:layout_constraintTop_toTopOf="@+id/tv_item_favAd_title" />

    <ImageView
        android:id="@+id/iv_item_favAd_rightArrow"
        android:layout_width="33dp"
        android:layout_height="34dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_favAd_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_favAd_title"
        app:srcCompat="@android:drawable/ic_menu_slideshow" />
</androidx.constraintlayout.widget.ConstraintLayout>