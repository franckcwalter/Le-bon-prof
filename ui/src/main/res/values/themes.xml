<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjetFinal" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:fontFamily">@font/londrina_solid</item>
        <item name="android:statusBarColor">@color/mainBg</item>
        <item name="android:textColor">@color/mainFont</item>

        <item name="colorPrimary">@color/mainAccent</item>


    </style>

    <style name="Theme.ProjetFinal" parent="Base.Theme.ProjetFinal" />

    <style name="authPageTitle">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/point_soft_black</item>
        <item name="android:textColor">@color/mainFont</item>
    </style>

    <style name="pageTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/point_soft_black</item>
        <item name="android:textColor">@color/mainFont</item>
    </style>

    <style name="authEditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint"> @color/secondaryFont</item>
        <item name="android:textColor">@color/mainFont</item>
    </style>


    <style name="formEditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint"> @color/secondaryFont</item>
        <item name="android:textColor">@color/mainFont</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>


    <style name="button">
        <item name="fontFamily">@font/point_soft_black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/mainAccent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="radioButton">
        <item name="buttonTint">@color/mainAccent</item>
        <item name="android:textColor">@color/mainFont</item>
    </style>

    <style name="roundedSquare">
        <item name="cornerSize">15%</item>
    </style>

    <style name="customSwitch" >
        <item name="colorControlActivated">@color/mainBg</item>
        <item name="colorSwitchThumbNormal">@color/mainBg</item>
        <item name="android:colorForeground">@color/mainBg</item>
    </style>


</resources>