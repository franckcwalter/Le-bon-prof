<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.devid_academy.projetfinal.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.devid_academy.projetfinal.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.devid_academy.projetfinal.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.devid_academy.projetfinal.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_profileTeacherFragment"
            app:destination="@id/profileTeacherFragment" />
        <action
            android:id="@+id/action_mainFragment_to_profileLearnerFragment"
            app:destination="@id/profileLearnerFragment" />
        <action
            android:id="@+id/action_mainFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
        <action
            android:id="@+id/action_mainFragment_to_adDetailsFragment"
            app:destination="@id/adDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileTeacherFragment"
        android:name="com.devid_academy.projetfinal.ui.profile_teacher.ProfileTeacherFragment"
        android:label="ProfileTeacherFragment"
        tools:layout="@layout/fragment_profile_teacher">
        <action
            android:id="@+id/action_profileTeacherFragment_to_adUpdateFragment2"
            app:destination="@id/adUpdateFragment2" />
        <action
            android:id="@+id/action_profileTeacherFragment_to_adCreateFragment"
            app:destination="@id/adCreateFragment" />
        <action
            android:id="@+id/action_profileTeacherFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="adId"
            app:argType="long"
            android:defaultValue="0L" />
    </fragment>
    <fragment
        android:id="@+id/profileLearnerFragment"
        android:name="com.devid_academy.projetfinal.ui.profile_learner.ProfileLearnerFragment"
        android:label="ProfileLearnerFragment"
        tools:layout="@layout/fragment_profile_learner">
        <action
            android:id="@+id/action_profileLearnerFragment_to_adDetailsFragment"
            app:destination="@id/adDetailsFragment" />
        <action
            android:id="@+id/action_profileLearnerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/adUpdateFragment2"
        android:name="com.devid_academy.projetfinal.ui.ad_update.AdUpdateFragment"
        android:label="fragment_ad_update"
        tools:layout="@layout/fragment_ad_update" >
        <argument
            android:name="articleDto"
            app:argType="com.devid_academy.projetfinal.network.AdDto" />
    </fragment>
    <fragment
        android:id="@+id/adminFragment"
        android:name="com.devid_academy.projetfinal.ui.admin.AdminFragment"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin" />
    <fragment
        android:id="@+id/adCreateFragment"
        android:name="com.devid_academy.projetfinal.ui.ad_create.AdCreateFragment"
        android:label="AdCreateFragment"
        tools:layout="@layout/fragment_ad_create">
        <action
            android:id="@+id/action_adCreateFragment_to_profileTeacherFragment"
            app:destination="@id/profileTeacherFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/profileTeacherFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/adDetailsFragment"
        android:name="com.devid_academy.projetfinal.ui.ad_details.AdDetailsFragment"
        android:label="AdDetailsFragment"
        tools:layout="@layout/fragment_ad_details">
        <argument
            android:name="idAd"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.devid_academy.projetfinal.ui.conversation.ConversationFragment"
        android:label="fragment_conversation"
        tools:layout="@layout/fragment_conversation" />
</navigation>